{{#if error}}
    <div class="mdl-cell mdl-cell--12-col">
        <div class="response mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-color--red-A700">
                <h2 class="mdl-card__title-text mdl-color-text--white">Oh snap!</h2>
            </div>
            <div class="mdl-card__supporting-text">
                {{error}}
            </div>
        </div>
    </div>
{{else}}
    {{#if info}}
        <div class="mdl-cell mdl-cell--12-col">
                <div class="response mdl-card mdl-shadow--2dp mdl-color--blue-500">
                    <div class="mdl-card__supporting-text mdl-color-text--white">
                        {{info}}
                    </div>
                </div>
        </div>
    {{else}}
        <div class="mdl-cell {{#if screenshot}}mdl-cell--9-col mdl-cell--4-col-tablet mdl-cell--4-col-phone{{else}}mdl-cell--12-col{{/if}}">
                <div class="response mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-color--primary">
                        <h2 class="mdl-card__title-text mdl-color-text--primary-contrast">{{title}}</h2>
                    </div>
                    <div class="json mdl-card__supporting-text">
                        <pre>{{content}}</pre>
                    </div>
                </div>
        </div>
        {{#if screenshot}}
        <div class="screenshot mdl-cell mdl-cell--3-col mdl-cell--4-col-tablet mdl-cell--4-col-phone mdl-typography--text-center">
            <img src="{{screenshot}}" class="mdl-shadow--2dp">
        </div>
        {{/if}}
    {{/if}}
{{/if}}
