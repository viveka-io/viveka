<div class="mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text">{{name}}</h2>
    </div>
    <div><i class="icon-public"></i> {{config.url}}</div>
    <div id="browser-selector">
        {{#each config.browsers}}
        <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-{{@index}}">
            <input type="radio" id="option-{{@index}}" class="mdl-radio__button" name="options" value="{{name}}" {{#if selected}}checked{{/if}} />
            <span class="mdl-radio__label">{{name}}</span>
        </label>
        {{/each}}
    </div>
    <div>{{config.browserWidth}}x{{config.browserHeight}}</div>
</div>
